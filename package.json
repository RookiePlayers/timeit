{
  "name": "clockit",
  "displayName": "ClockIt: Session manager",
  "description": "A time logger to track your coding sessions.",
  "version": "1.0.0",
  "publisher": "octech",
  "license": "MIT",
  "repository": "https://github.com/RookiePlayers/timeit.git",
  "homepage": "https://github.com/RookiePlayers/timeit.git",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clockit.startTimeTracking",
        "title": "TimeIt: Start Time Tracking"
      },
      {
        "command": "clockit.stopTimeTracking",
        "title": "TimeIt: Stop Time Tracking"
      },
      {
        "command": "clockit.showTimeLog",
        "title": "TimeIt: Show Time Log"
      },
      {
        "command": "clockit.clearTimeLog",
        "title": "TimeIt: Clear Time Log"
      },
      {
        "command": "clockit.toggle",
        "title": "TimeIt: Toggle Time Tracking"
      },
      {
        "command": "clockit.openCsv",
        "title": "TimeIt: Open CSV Log"
      },
      {
        "command": "clockit.chooseCsvFolder",
        "title": "TimeIt: Choose CSV Output Folder"
      },
      {
        "command": "clockit.chooseSinks",
        "title": "TimeIt: Choose Sinks"
      },
      {
        "command": "clockit.editCredentials",
        "title": "TimeIt: Edit Credentials"
      },
      {
        "command": "clockit.clearCredentials",
        "title": "TimeIt: Clear Credentials"
      },
      {
        "command": "clockit.signIn.jira",
        "title": "TimeIt: Sign in to Jira (Coming Soon)"
      },
      {
        "command": "clockit.signIn.notion",
        "title": "TimeIt: Sign in to Notion (Coming Soon)"
      }
    ],
    "configuration": {
      "title": "TimeIt Settings",
      "properties": {
        "clockit.enabledSinks": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "csv",
              "jira",
              "notion"
            ]
          },
          "default": [
            "csv"
          ],
          "description": "Select which sinks to use for exporting sessions."
        },
        "clockit.askSinksEachTime": {
          "type": "boolean",
          "default": true,
          "description": "Always prompt which sinks to use before exporting."
        },
        "clockit.enableJira": {
          "type": "boolean",
          "default": false,
          "description": "Enable Jira integration for time tracking."
        },
        "clockit.jira.apiToken": {
          "type": "string",
          "default": "",
          "description": "Jira API token for authentication."
        },
        "clockit.jira.email": {
          "type": "string",
          "default": "",
          "description": "Email associated with your Jira account."
        },
        "clockit.jira.domain": {
          "type": "string",
          "default": "",
          "description": "Your Jira domain (e.g., your-domain.atlassian.net)."
        },
        "clockit.csv.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Directory to save CSV time logs. Leave empty to use workspace root."
        },
        "clockit.csv.filename": {
          "type": "string",
          "default": "time_log.csv",
          "description": "Filename for the CSV time log."
        },
        "clockit.csv.addHeaderIfMissing": {
          "type": "boolean",
          "default": true,
          "description": "Add header row to CSV file if it's missing."
        },
        "clockit.csv.ensureDirectory": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create the output directory if it doesn't exist."
        },
        "clockit.autoStartOnLaunch": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start time tracking when VSCode launches."
        },
        "clockit.idleTimeoutMinutes": {
          "type": "number",
          "default": 5,
          "description": "Number of idle minutes before pausing time tracking."
        },
        "clockit.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for time tracking events."
        },
        "clockit.notion.enableNotion": {
          "type": "boolean",
          "default": false,
          "description": "Enable Notion integration for time tracking."
        },
        "clockit.notion.pageId": {
          "type": "string",
          "default": "",
          "description": "Notion Page ID where time logs will be recorded."
        },
        "clockit.notion.apiToken": {
          "type": "string",
          "default": "",
          "description": "Notion API token for authentication."
        },
        "clockit.notion.databaseId": {
          "type": "string",
          "default": "",
          "description": "Notion Database ID for logging time entries."
        },
        "clockit.backup.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Periodically checkpoint the active time session to a backup CSV and flush on shutdown/errors."
        },
        "clockit.backup.intervalSeconds": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "How often to checkpoint the in-progress session."
        },
        "clockit.backup.directory": {
          "type": "string",
          "default": "",
          "description": "Directory for backups. If empty, use the CSV sink directory or workspace root."
        },
        "clockit.backup.filenamePrefix": {
          "type": "string",
          "default": "backup_",
          "description": "Prefix for backup CSV files. Final name is prefix + YYYYMMDD + .csv"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p tsconfig.build.json",
    "watch": "tsc -w -p tsconfig.build.json",
    "lint": "eslint src",
    "build": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "publish": "vsce publish --no-yarn"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.0",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "commitlint": "^20.1.0",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2"
  },
  "packageManager": "npm@>=10.0.0"
}
